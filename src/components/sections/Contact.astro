---
const {t} = Astro.props;
---

<section id="contact-section" class="footer-wallpaper flex flex-row justify-start items-center dark:bg-neutral-800 relative min-h-6xl">
    <a id="contact" class="absolute -top-20"></a>
	<div class="mx-auto max-w-[90%] lg:max-w-[80%] pt-12 pb-20 flex flex-col justify-between items-center gap-10 lg:flex-row lg:gap-20 xl:max-w-7xl">
		<div class="w-[90%] lg:basis-1/2">
			<header class="flex flex-col items-center justify-center w-full lg:items-start">
				<h1 class ="font-extrabold text-4xl sm:text-5xl cursor-default py-2">{t.globals.contactTitle}</h1>
				<h2 class ="text-neutral-500 dark:text-white leading-8 tracking-wide font-light text-md md:text-lg my-4 text-center lg:text-left">{t.globals.contactDescription}</h2>
			</header>
		</div>
		<div class="w-[90%] lg:basis-1/2 lg:w-full">
			<form action="#" class="space-y-8 w-full">
				<div>
					<label for="email" class="block mb-2 text-sm font-medium text-neutral-700 dark:text-neutral-100">{t.globals.email}</label>
					<input type="email" id="email" class="shadow-sm bg-neutral-50 border border-neutral-300 text-neutral-700 text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-neutral-700 dark:border-neutral-600 dark:placeholder-neutral-200 dark:text-white dark:focus:ring-primary dark:focus:border-primary dark:shadow-sm-light" placeholder={t.globals.emailPlaceholder} required>
				</div>
				<div>
					<label for="subject" class="block mb-2 text-sm font-medium text-neutral-700 dark:text-neutral-100">{t.globals.subject}</label>
					<input type="text" id="subject" class="block p-3 w-full text-sm text-neutral-700 bg-neutral-50 rounded-lg border border-neutral-300 shadow-sm focus:ring-primary focus:border-primary dark:bg-neutral-700 dark:border-neutral-600 dark:placeholder-neutral-200 dark:text-white dark:focus:ring-primary dark:focus:border-primary dark:shadow-sm-light" placeholder={t.globals.subjectPlaceholder} required>
				</div>
				<div class="sm:col-span-2">
					<label for="message" class="block mb-2 text-sm font-medium text-neutral-700 dark:text-neutral-100">{t.globals.message}</label>
					<textarea id="message" rows="6" class="block p-2.5 w-full text-sm text-neutral-700 bg-neutral-50 rounded-lg shadow-sm border border-neutral-300 focus:ring-primary focus:border-primary dark:bg-neutral-700 dark:border-neutral-600 dark:placeholder-neutral-200 dark:text-white dark:focus:ring-primary dark:focus:border-primary" placeholder={t.globals.messagePlaceholder}></textarea>
				</div>
				<div class="flex justify-end">
					<button type="submit" class="py-3 px-5 text-md font-extrabold tracking-widest text-center rounded-lg border-2 border-primary dark:border-accent bg-neutral-50 dark:bg-neutral-800 hover:text-primary dark:hover:text-accent hover:scale-105 transition">{t.globals.sendEmail}</button>
				</div>
			</form>
		</div>
	</div>
</section>

<style is:inline>
	.footer-wallpaper{
		mask-image: linear-gradient(transparent, #fff 10%);
	}
</style>
<script type="text/javascript" src="https://cdn:jsdelivr.net/npm/@emailjs/brow"></script>