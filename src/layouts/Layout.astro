---
import Header from '@components/sections/Header.astro';
import Footer from '@components/sections/Footer.astro';
import { ClientRouter } from 'astro:transitions';
import '@styles/global.css';
const { currentLocale, t } = Astro.props;
---

<!doctype html>
<html lang="{currentLocale}">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon-pma.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&family=Roboto&family=Merriweather+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
		<title>{t.globals.title}</title>
		<ClientRouter />
	</head>
	<body class="font-merriweather text-neutral-800 dark:text-white dark:bg-neutral-800">
		<Header currentLocale={currentLocale} t={t}/>
		<slot />
		<Footer t={t}/>
	</body>
</html>

<style is:global>
	:root{
		color-scheme: light dark;
	}
</style>